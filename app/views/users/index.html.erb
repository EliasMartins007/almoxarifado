<p id="notice"><%= notice %></p>

<h1>Usuários</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Login</th>
      <th scope="col">Senha</th>
      <th scope="col">Ação</th>      
    </tr>
  </thead>
  <tbody>

<% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.login %></td>
      <td><%= user.password_digest %></td>
      <!--td><%= link_to 'Visualizar', user %></td-->
      <td><%= link_to 'Atualizar', edit_user_path(user) %></td>
        <!--td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
    </tr>
<% end %>    
  </tbody>
</table>
<br>
<%= paginate @users %>
<%= page_entries_info @users %>

<%= link_to 'Novo Usuário', new_user_path, class:"btn btn-link" %>
