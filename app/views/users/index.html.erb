<p id="notice"><%= notice %></p>

<h1>Usuários</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Login</th>
      <th>Senha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Visualizar', user %></td>
        <td><%= link_to 'Atualizar', edit_user_path(user) %></td>
        <!--td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @users %>
<%= page_entries_info @users %>

<%= link_to 'Novo Usuário', new_user_path, class:"btn btn-link" %>
