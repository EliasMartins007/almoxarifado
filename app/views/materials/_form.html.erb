<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_with(model: material) do |form| %>
      <% if material.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

          <ul>
            <% material.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, class:"form-control", placeholder: "nome do material" %>
      </div>


      <div class="form-group">
        <%= form.label :Quantidade %>
        <%= form.number_field :qtd, class: "form-control", placeholder: "Quantidade do material" %>
      </div>

      <div class="form-group">
        <%= form.label :descrição %>
        <%= form.text_area :descricao, class:"form-control", placeholder: "Descrição sobre o material" %>
      </div>
    <br>
      <div class="actions">
        <%= form.submit 'Salvar', class: "btn	btn-outline-dark	btn-lg	mb-4" %>
      </div>
    <% end %>
  </div>
</div>
