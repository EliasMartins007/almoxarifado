<p id="notice"><%= notice %></p>
<div class="col-md-6 col-md-offset-3 col-xs-12">
 <%= search_form_for @q do |f| %>
   <%= f.label :Pesquisar_material_por_nome %>  
   <%= f.search_field :nome_start, class: "form-control", placeholder: "Pesquisar" %> 
   <br>
   <%= f.submit 'Pesquisar', class:"btn btn-primary" %>
<% end %>
</div>
<h1>Materiais</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Quantidade</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.nome %></td>
        <td><%= material.qtd %></td>
        <td><%= material.descricao %></td>
        <!--td><%= link_to 'Visualizar', material %></td-->
        <td><%= link_to 'Atualizar', edit_material_path(material) %></td>
        <td><%= link_to 'Excluir', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @materials %>
<%= page_entries_info @materials %>

<%= link_to 'Novo Material', new_material_path, class:"btn btn-link" %>
